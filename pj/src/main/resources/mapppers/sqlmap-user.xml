<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blackbread.model.User">

	<cache />
	<resultMap type="User" id="resultListUser">
		<id column="ID" property="id" jdbcType="VARCHAR"/>
		<result column="USERNAME" property="userName" jdbcType="VARCHAR" />
		<result column="PASSWORD" property="password"  jdbcType="VARCHAR"/>
		<result column="CREATETIME" property="createTime" jdbcType="DATE"/>
		<result column="CREATEUSER" property="crateUser" jdbcType="VARCHAR"/>
	</resultMap>

	<select id="user-list" resultType="User" parameterType="int">
		SELECT
		ID, USERNAME, PASSWORD,CREATETIME,CREATEUSER FROM T_USER
	</select>

	<insert id="user-insert" parameterType="user" 
		 >
		insert into
		T_USER(ID,USERNAME,PASSWORD,CREATETIME,CREATEUSER)
		values(#{id},#{userName},#{passWord},#{createTime},#{createUser})
	</insert>

	<update id="update-user" parameterType="User">
		UPDATE USERS SET
		USERNAME=#{userName},PASSWORD=#{password} WHERE UID=#{uid}
	</update>

	<delete id="delete-user" parameterType="int">
		DELETE USERS WHERE
		UID=#{id}
	</delete>

	<select id="queryAll" resultMap="resultListUser">
		SELECT * FROM USERS
	</select>
</mapper>  